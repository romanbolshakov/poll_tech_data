<Window x:Class="techdata_charting_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <d3:ChartPlotter x:Name="chartPlotter">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalIntegerAxis Name="dateAxis"></d3:HorizontalIntegerAxis>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalIntegerAxis Name="countAxis"></d3:VerticalIntegerAxis>
            </d3:ChartPlotter.VerticalAxis>
            <d3:Header Content="Weather Information" FontFamily="Verdana"></d3:Header>
            <d3:VerticalAxisTitle Content="Count" FontFamily="Verdana"></d3:VerticalAxisTitle>
            <d3:HorizontalAxisTitle Content="Date" FontFamily="Verdana"></d3:HorizontalAxisTitle>
        </d3:ChartPlotter>
        <Button Grid.Row="1" Content="Add values" MaxWidth="100" HorizontalAlignment="Left" Click="Button_Click" />
    </Grid>
</Window>
